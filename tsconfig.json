{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/**/*.ts", "docs/**/*.ts", "test/*"],
  "exclude": ["./node_modules"]
}
